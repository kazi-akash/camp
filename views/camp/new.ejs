<%- include ("../partials/header") %>

<div class="container text-center">
        <h1>Add New Data</h1> <br>
        <div style="width: 25%; margin: 0 auto;">
            <form action="/home/dataEntry" method="POST">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Type camp name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="price" placeholder="Type price of area /night" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="image" placeholder="Type image url" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="desc" placeholder="Type about the place" class="form-control">
                </div>
                <button class="btn btn-success btn-md">Add new camping</button>
            </form>
        <a href="/home">Go Back</a>
    </div>
</div>

<%- include ("../partials/footer") %>