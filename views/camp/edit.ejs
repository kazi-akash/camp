<%- include ("../partials/header") %>

<div class="container">
        <h1 class="text-center">Edit <%= data.name %></h1> <br>
        <div style="width: 25%; margin: 0 auto;">
            <form action="/home/<%= data._id %>/update?_method=PUT" method="POST">
                <p>Name</p>
                <div class="form-group">
                    <input type="text" name="editCamp[name]" value = "<%= data.name %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="editCamp[price]" value = "<%= data.price %>" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <p>Image</p>
                    <input type="text" name="editCamp[image]" value = "<%= data.image %>" class="form-control">
                </div>
                <div class="form-group">
                    <p>Details</p>
                    <input type="text" name="editCamp[desc]" value = "<%= data.desc %>" class="form-control">
                </div>
                <button class="btn btn-success btn-md">Update</button>
            </form>
        <a href="/home">Go Back</a>
    </div>
</div>

<%- include ("../partials/footer") %>